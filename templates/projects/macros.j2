{% import 'utility.macros.j2' as utility %}
{% import 'birds/utility.macros.j2' as birds %}
{% import 'content.macros.j2' as content %}
{% import 'layout/macros.j2' as layout %}


{% macro list(project, named_states=[]) %}
<article class="project post-preview">

  {{ cover(project.cover_image) }}

  <header class="project-list-meta">
    <aside class="project-list-links">
      {% if project.url %}
        {{ utility.link_if('Case Study', project.url, class='btn') }}
      {% endif %}
      {% if project.source %}
        {{ utility.link_if('Source Code', project.source, class='btn') }}
      {% endif %}
    </aside>

    <h2 class="project-list-title title-main">{{ project.name }}</h2>

    {% if project.tagline %}
      <h3 class="project-list-tagline title-sub">{{ project.tagline }}
        {% if project.client %}
          {{ for(project.client, project.years) }}
        {% else %}
          {{ who(project.who) }}
        {% endif %}
      </h3>
    {% endif %}
  </header>

  {% if project.description or project.status %}
    <p class="project-summary">
      {{ project.description }}

      {% if project.status %}
        <em>{{ named_states[project.status] or project.status }}</em>
      {% endif %}
    </p>
  {% endif %}

  {% if project.quote %}
    {{ content.blockquote(project.quote.text, project.quote.credit) }}
  {% endif %}

</article>
{% endmacro %}


{% macro feature(page) %}
  {% set client = page.config.client[0] if page.config.client else null %}
  {% set contributors = page.config.contributors if page.config.contributors else null %}
  {% set project = page.config.project[0] %}
  {% set link = ['/', page.slug, '/']|join('') if project.owner or project.case_study %}
  {% set link = link if project.case_study else (project.url or link or project.source) %}

  <article class='project-feature grid-template'>
    {{ layout.header_image(page, class='project-cover-image') }}

    {% call content.rst() %}
      <header class="project-list-meta">
        <div class="project-headlines">
          <h2 class="project-list-title project-title">
            {{ utility.link_if(project.name, link) }}
          </h2>
          {% if project.tagline %}
            <h3 class="project-list-tagline">{{ project.tagline }}</h3>
          {% endif %}
        </div>

        <aside class="project-list-links">
          {% if project.case_study %}
            {% call content.link_button(link) %}
              Read our case study
            {% endcall %}
          {% endif %}
          {% if project.url or project.owner %}
            {% call content.link_button(project.url or ['/', page.slug, '/']|join('')) %}
              View app
            {% endcall %}
          {% endif %}
          {% if project.source %}
            {% call content.link_button(project.source) %}
              View source
            {% endcall %}
          {% endif %}
        </aside>


      </header>

      {% if page.summary %}
        <div class="project-list-summary project-summary">
          {{ page.render_summary() }}
        </div>
      {% endif %}
    {% endcall %}

    {% for quote in page.config.quotes %}
      {{ content.blockquote(quote.text, quote.name, quote.url, quote.role) }}
    {% endfor %}

    {{ content.divider()}}
  </article>
{% endmacro %}


{% macro for(client, years) %}
  <div class="meta">
    <p class="byline">
      <span class="meta-preposition">for</span>
      {{ utility.link_if(client.name, client.url) }}
      {% if years %}
        <span class="meta-preposition">in</span>
        {{ years }}
      {% endif %}
    </p>
  </div>
{% endmacro %}


{% macro who(contributors) %}
  {% if contributors %}
    <div class="meta">
      <p class="byline">
        <span class="meta-preposition">by</span>
        {% for contributor in contributors %}
          {% if loop.last and not loop.first %}
            <span class="meta-preposition">and</span>
          {% endif %}
          {% set page = all_pages|filter_pages('bird', 'eq', contributor.author)|get_page %}
          {{ birds.name_link(
            author=contributor.author,
            page=page
          ) }}
          [{{ contributor.role }}]{{ ',' if not loop.last }}
        {% endfor %}
      </p>
    </div>
  {% endif %}
{% endmacro %}



{% macro cover(cover_image) %}

  {% set coverimage = cover_image[0].src if cover_image %}
  {% set coverimageurl = coverimage if '://' in coverimage else [canonical_url, '../static/images/blog/', coverimage]|join('') %}

  {% if coverimage %}
    <img src="{{ coverimageurl }}" class="project-cover-image expand-large">
  {% endif %}

{% endmacro %}
