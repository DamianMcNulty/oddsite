{% import 'utility.macros.j2' as utility %}


{% set site_message = config.site_message[0] %}
{% if site_message.body %}
  <aside data-region="site-message">
    <p class="message-body">
      {{ site_message.body|safe }}
    </p>
    <div class="message-action">
      {{ utility.link_if(site_message.action, site_message.url, class="btn") }}
    </div>
  </aside>
{% endif %}
