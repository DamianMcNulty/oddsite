{% import "birds/utility.macros.j2" as birds %}
{% import "content.macros.j2" as content %}

{% set former = all_pages|filter_pages('former') %}

{% if former %}
<article data-module="birds-former">
  {{ content.divider(title='OddBirds Emeritusâ€¦') }}

  <ul>
    {% for page in former %}
      {% set author = page.config.bird %}
      {% set data = page.config.former[0] %}
