
{% macro twitter(author, birds) %}
  {%- if author -%}
    {%- for bird in birds -%}
      {%- if author == bird.author -%}
        {{ bird.twitter }}
      {%- endif -%}
    {%- endfor -%}
  {%- else -%}
    {{ company.first.twitter }}
  {%- endif -%}
{% endmacro %}

